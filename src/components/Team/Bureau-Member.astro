---
import { t } from "i18next";
export interface Props {
    boardMember: {
        name: string;
        role: string;
        img: string;
        text: string;
    };
}
const {
    boardMember: { name, img, role, text },
} = Astro.props;
const firstName = name.split(" ")[0];
const lastName = name.split(" ")[1];
---

<!-- sizes="(max-width: 479px) 100vw, (max-width: 767px) 93vw, (max-width: 991px) 30vw, 286px" -->
<div class="one-item">
    <div>
        <div class="cards-image-mask">
            <div class="img-wrap">
                <img
                    src={img}
                    class="image-cards"
                    alt={`${name} - ${t(role)}`}
                />

                <p class="info-bureau">{t(text)}</p>
            </div>
        </div>
        <h3>
            <span class="center">{firstName}</span>
            <span class="center">{lastName}</span>
        </h3>
        <p class="paragraph-light"></p>
        <span class="center">{t(role)}</span>
        <p></p>
    </div>
</div>

<style>
    @keyframes slidein {
        from {
            opacity: 0.5;
        }

        to {
            opacity: 1;
        }
    }

    .one-item {
        border-radius: 5px;
        border-radius: 0.5rem;
        padding: var(--margin);
        --margin: 0.2rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 2px 4px -2px rgba(0, 0, 0, 0.1);
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        background-position: 100%;
    }
    .one-item:hover {
        background-color: white;
        background-image: var(--accent-gradient);
        background-size: 100%;
        border-radius: 0.5rem;
        background-position: 0;
        animation-duration: 0.5s;
        animation-name: slidein;
    }
    .one-item:hover > * {
        opacity: 0.5;
    }
    .one-item > * {
        padding: 10px;
        background-color: white;
        width: 100%;
        border-radius: 0.5rem;
        height: 100%;
    }
    .one-item:hover .info-bureau {
        display: block;
    }
    .one-item:hover .image-cards {
        display: none;
    }
    .info-bureau {
        display: none;
        text-align: center;
        font-size: small;
        line-height: 1.25;
    }
    .center {
        display: block;
        text-align: -webkit-center;
        text-align: center;
    }
    .cards-image-mask {
        position: relative;
        overflow: hidden;
        width: 100%;
        padding-top: 100%;
        border-radius: 0%;
    }
    .img-wrap {
        position: absolute;
        left: 0%;
        top: 0%;
        right: 0%;
        bottom: 0%;
        width: 100%;
        height: 100%;
        max-width: none;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    img {
        height: 100%;
        width: 100%;
        border: 0;
        border-radius: 10px;
        object-fit: cover;
        object-position: center;
    }
</style>
