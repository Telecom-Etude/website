---
import imgEkip from "../../website-data/imgs/about/2024-2025_Telecom_Etude.jpg";
import ButtonColor from "../ButtonColor.astro";
import afnor from "../../website-data/imgs/telecom-etude-afnor.png";
import { t } from "i18next";
import { localizePath } from "astro-i18next";
---

<div class="section">
    <hr />
    <div class="motto-wrap">
        <div class="mini-text">{t("motivation.cert")}</div>
        <div class="popup heading-jumbo-small">
            <div class="afnor-text">
                <h2>{t("motivation.iso")}</h2>
            </div>
            <div class="afnor-wrap">
                <img class="img-afnor" src={afnor} />
            </div>
        </div>
    </div>
    <hr />
    <div class="w-container">
        <div class="flex home-section-wrap">
            <div>
                <img src={imgEkip} alt="Logo equipe" class="image" />
            </div>
            <div class="sub-flex">
                <h2 class="section-heading"></h2>
                <p class="paragraph-light">
                    {t("motivation.paragraph")}
                </p>
                <a href={localizePath("/contact")} class="button-ref">
                    <ButtonColor>{t("motivation.button")}</ButtonColor>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .sub-flex {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .sub-flex > * {
        flex: 1;
    }
    .button-ref {
        margin-top: 20px;
    }
    hr {
        margin: 30px 0px;
        border: 1px solid #ccc;
    }
    .mini-text {
        text-transform: uppercase;
        color: gray;
    }
    .section {
        width: 90%;
        margin: auto;
        margin-bottom: 50px;
    }
    .motto-wrap {
        text-align: center;
    }
    .popup {
        display: flex;
    }
    .afnor-text h2 {
        font-weight: normal;
    }
    .afnor-text {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 0.9;
    }
    .button-ref {
        text-align: center;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 12px;
        line-height: 20px;
    }
    .img-afnor {
        margin: auto;
        width: 100%;
    }
    .afnor-wrap {
        width: 50%;
        margin: auto;
        flex: 0.1;
    }
    .flex {
        display: flex;
        width: 90%;
        margin: auto;
        padding-bottom: 50px;
    }
    .image {
        margin: auto;
        width: 90%;
        border-radius: 10px;
    }
    @media screen and (max-width: 767px) {
        .popup {
            display: block;
        }
        .flex {
            display: block;
        }
    }
</style>
