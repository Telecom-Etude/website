---
import { localizePath } from "astro-i18next";
import { data } from "../../website-data/content/footer";
import { mail, year } from "../../website-data/content/constants";
import { t } from "i18next";
import Logo from "../Img/Logo.svelte";
---

<footer class="section">
    <div>
        <div class="sm-handle">
            {
                data.map((item) => (
                    <a href={item.link} class="sm-button" target="_blank" aria-label={`Link to ${item.title}`}>
                        <div class="wrapper" title={item.title}>
                            <i class={`fab ${item.icon}`} />
                        </div>
                    </a>
                ))
            }
        </div>
        <div class="flexing">
            <Logo client:load />

            <div class="paragraph-tiny">
                <p><a href={localizePath("/legal")} class="w--current">{t("footer.text1")}</a></p><p>
                    {t("footer.copyright")}
                    {year}
                </p>
                <p>{mail}</p>
            </div>
        </div>
    </div>
</footer>

<style>
    .paragraph-tiny {
        display: flex;
        flex-direction: column;
        justify-content: center;
        font-size: 12px;
        line-height: 20px;
    }
    .paragraph-tiny p {
        margin: 0px;
    }
    .flexing {
        display: flex;
    }
    .flexing > * {
        flex: 1;
    }
    .block-footer {
        margin-top: 10px;
    }
    .fa-github:before {
        content: "\f09b";
    }
    .fa,
    .fab,
    .fad,
    .fal,
    .far,
    .fas {
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        display: inline-block;
        font-style: normal;
        font-variant: normal;
        text-rendering: auto;
        line-height: 1;
    }
    .fa-linkedin:before {
        content: "\f08c";
    }
    .fab,
    .far {
        font-weight: 400;
    }
    .fa-facebook-f:before {
        content: "\f39e";
    }
    .fab {
        font-family: "Font Awesome 5 Brands";
    }
    .fa-twitter:before {
        content: "\f099";
    }
    .fa-instagram:before {
        content: "\f16d";
    }
    footer {
        border-top: 1px solid var(--red);
    }
    p {
        margin: 0px;
    }
    .section {
        display: flex;
        justify-content: center;
        margin: auto;
        padding-bottom: 2rem;
        padding-top: 2rem;
    }
    .wrapper {
        width: 100%;
        text-align: center;
        color: var(--accent-gradient);
        transition: color 0.5s;
        color: white;
    }
    .wrapper:hover,
    .wrapper:focus-within {
        color: black;
    }
    .sm-handle {
        display: flex;
        justify-content: center;
    }
    .sm-button {
        margin: 0px 10px 0px;
        border: 1px solid #ff2a00;
        border-radius: 100%;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background-color: white;
        background-image: var(--accent-gradient);
        background-size: 100%;
        background-position: 100%;
        transition: background-position 2s cubic-bezier(0.22, 1, 0.36, 1);
        text-decoration: none;
    }
    .sm-button:hover,
    .sm-button:focus-within {
        background-position: 0;
    }
</style>
