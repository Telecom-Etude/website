---
import i18next, { t } from "i18next";
import Header from "./Header.astro";
export interface Props {
    title: string;
    lang: string;
}
const { title } = Astro.props;
import faviconLink from "../website-data/imgs/favicon.png";
import "../css/font-awesome.css";
import Fonts from "../components/Fonts.astro";
---

<!DOCTYPE html>
<html lang={i18next.language}>
    <head>
        <Header title={t(title)} desc={t("description")} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <Fonts />
        <link rel="icon" type="image/svg+xml" href={faviconLink} />
    </head>
    <body>
        <slot />
        <style is:global>
            :root {
                --orange: #fd8334;
                --deg1: #ffb58f;
                --deg2: #ffb99d;
                --deg3: #f07b6b;
                --deg4: #e34e5a;
                --deg5: #dc3551;
                --deg6: #d92b4d;
                --red: #d51f48;
                --accent-gradient: linear-gradient(
                    45deg,
                    var(--orange),
                    var(--red) 85%,
                    rgb(255, 252, 251) 150%
                );
            }
            html {
                font-family: Montserrat, sans-serif;
                color: #1a1b1f;
            }
            body {
                margin: 0px;
                font-size: 16px;
                line-height: 28px;
                font-weight: 400;
            }
            h3 {
                margin-top: 10px;
                margin-bottom: 10px;
                font-size: 26px;
                line-height: 46px;
                font-weight: 400;
            }
            h2 {
                margin-top: 10px;
                margin-bottom: 10px;
                font-size: 30px;
                line-height: 46px;
                font-weight: 400;
            }
            h5 {
                margin-top: 10px;
                margin-bottom: 10px;
                font-size: 20px;
                line-height: 34px;
                font-weight: 500;
            }

            h6 {
                margin-top: 10px;
                margin-bottom: 10px;
                font-size: 16px;
                line-height: 28px;
                font-weight: 500;
            }

            p {
                margin-bottom: 10px;
            }

            a {
                display: block;
                -webkit-transition: opacity 200ms ease;
                transition: opacity 200ms ease;
                color: #1a1b1f;
                cursor: pointer;
                text-decoration: underline;
            }
            code {
                font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
                    DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
                    monospace;
            }
            * {
                box-sizing: border-box;
            }
        </style>
    </body>
</html>
